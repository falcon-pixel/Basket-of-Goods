<div class="container">
    <div class="row justify-content-center justify-content-lg-start">
        {{#each products}}
        <div class="card  m-3 p-2" style="width: 18rem;">
            <img src="/images/product-images/{{this._id}}.jpg" class="img-card-view" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <h6 class="text-secondary">{{this.category}}</h6>
                <p class="card-text">{{this.description}}.</p>
                <h6 class="text-secondary">{{this.price}}</h6>
                <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add To Cart</button>
            </div>
        </div>
        {{/each}}
    </div>
</div>

