<section>
    <div class="container">
        <div class="row">
            <div class="ms-auto col-md-2">

                <a href="/admin/add-product" class="btn btn-primary m-1 p-2">Add Product</a>
            </div>
        </div>
        <table class="table" >
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody class="counter-container">
                {{#each products}}
                <tr>
                    <td class="row-counter"></td>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img src="/images/product-images/{{this._id}}.jpg" class="view-product-img" alt=""></td>
                    <td class="">
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-secondary m-1">Edit</a>
                    </td>
                    <td>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger m-1" onclick="return confirm('Are you want to Delete {{this.name}}?')">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>